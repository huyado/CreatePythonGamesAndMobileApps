<WidgetsExample>:
    orientation: "vertical"
    BoxLayout:
        ToggleButton:
            text: "OFF"
            on_press: root.On_Toggle_Button(self)
            size_hint: None, 1
            wight: "100dp"
        Button:
            text: "Count"
            font_name: "fonts\Lcd.ttf"
            font_size: "50dp"
            on_press: root.On_Count_Click()
            disabled: not root.count_enabled
        Label:
            text: root.my_text
            font_name: "fonts\Lcd.ttf"
            font_size: "200dp"
            color: 0, 1, .5, 1
    BoxLayout:
        Switch:
            id: my_switch
            on_active: root.On_Active_Switch_Button(self)
            size_hint: None, 1
            width: "100dp"
            active: True
        Slider:
            id: my_slider
            min: 0
            max: 100
            value: 50
            on_value: root.On_Active_Slider(self)
            orientation: "vertical"
            disabled: not my_switch.active
        BoxLayout:
            orientation: "vertical"
            Label:
                text: str(int(my_slider.value))  #slider_value_txt
            ProgressBar:
                value: my_slider.value
    BoxLayout:
        TextInput:
            id: my_textinput
            size_hint: None, 1
            width: "100dp"
            text: "Write here!"
            multiline: False
            on_text_validate: root.on_text_validate(self)
        Label:
            text: "Your name: " + root.text_input_str

